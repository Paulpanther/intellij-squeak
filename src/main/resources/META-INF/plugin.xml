<idea-plugin>
    <id>com.paulpanther.intellijsqueak</id>
    <name>Squeak</name>
    <vendor>paulpanther</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Smalltalk File"
                implementationClass="com.paulpanther.intellijsqueak.SmalltalkFileType"
                language="Smalltalk"
                extensions="st"/>
        <moduleBuilder
                builderClass="com.paulpanther.intellijsqueak.SmalltalkModuleBuilder"
                id="SMALLTALK_MODULE_BUILDER"/>
        <newProjectWizard.language
                implementation="com.paulpanther.intellijsqueak.SmalltalkNewProjectWizard"/>
        <lang.parserDefinition
                implementationClass="com.paulpanther.intellijsqueak.lang.SmalltalkParserDefinition"
                language="Smalltalk"/>
        <lang.syntaxHighlighterFactory
                language="Smalltalk"
                implementationClass="com.paulpanther.intellijsqueak.SmalltalkSyntaxHighlighterFactory"/>
        <colorSettingsPage
                implementation="com.paulpanther.intellijsqueak.SmalltalkColorSettingsPage"/>
        <lang.refactoringSupport
                implementationClass="com.paulpanther.intellijsqueak.SmalltalkRefactoringSupportProvider"/>
        <lang.findUsagesProvider
                language="Smalltalk"
                implementationClass="com.paulpanther.intellijsqueak.SmalltalkFindUsagesProvider"/>
        <lang.commenter
                language="Smalltalk"
                implementationClass="com.paulpanther.intellijsqueak.SmalltalkCommenter"/>
        <highlightVisitor
                implementation="com.paulpanther.intellijsqueak.SmalltalkSemanticHighlighter" />
    </extensions>
</idea-plugin>
